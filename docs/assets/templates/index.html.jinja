{% extends "base.html.jinja" %}

{% block title %}{{ page_metadata.title }} {{ super() }}{% endblock %}
{% block description %}{{ page_metadata.description }}{% endblock %}
{% block base_content %}
    <div class="page">
        <div class="page__div">
            <div class="page_toc">
                <details>
                    <summary>On this page</summary>
                    {{ page_toc | safe }}
                </details>
                <div class="fulls">
                    <h2>On this page</h2>
                    {{ page_toc | safe }}
                </div>
            </div>
            <div class="page_content">{{ html | safe }}</div>
                {% if contents.children %}
            <div class="page_routes">
                <details>
                    <summary>Routes</summary>
                    {% include "toc.html.jinja" %}
                </details>
                    <div class="fulls">
                        <h2>Routes</h2>
                        {% include "toc.html.jinja" %}
                    </div>
            </div>
                {% endif %}
        </div>
    </div>
    <style>
    /* toc style*/
    .page {
        padding: 10px;
    }

    details summary {
        cursor: pointer;
        overflow: auto;
    }
    summary {
        background-color: var(--primary-700);
        padding: 10px;
        border-radius: 5px;
    }
    summary + * {
        padding: 0 20px;
    }

    .fulls {
        display: none;
    }

    .page_toc h2 {
        white-space: nowrap;
    }

    @media screen and (min-width: 928px) {
        .page__div {
            display: flex;
            max-width: calc(var(--max-page-width) * 0.8);
            margin: 0 auto;
            gap: 70px;
        }

        .fulls {
            display: block;
        }

        details {
            display: none;
        }

        .page_content {
            width: 100%;
            flex-grow: 1;
            order: 2;
        }

        .page_toc {
            display: block;
            height: min-content;
            padding: 0 20px;
            position: sticky;
            top: 10px;
            order: 3;
            flex-basis: 200px;
            flex-grow: 1;
            max-width: 300px;
        }
        .page_routes {
            order: 1;
        }
    }

    /*ends toc style*/
    </style>

{% endblock %}
